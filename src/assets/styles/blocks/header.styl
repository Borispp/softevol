#header
  background-color #fff
  shadow(0px 10px 16px -6px rgba(0,0,0,0.1))
  height 130px
  borderbox()
  padding 24px 34px 24px
  position relative
  z-index 1

  #header--logo
    float left
    width 120px
    img
      width 120px

  .info
    width calc(100% - 571px)
    float left
    text-align center
    borderbox()
    padding 24px 0

    &--headline
      font-size 24px
      font-weight 700
      line-height 20px
      margin-bottom 6px
      text-transform uppercase
    &--desc
      font-size 14px
      font-weight 500
      text-transform uppercase
      color #6c7883
      span
        color #ca424a
        display inline-block
        &:first-letter
          text-decoration underline

.download
  float right
  width 441px
  margin-top 12px
  text-align center
  h2
    font-weight 700
    font-size 16px
    margin-bottom 12px

  a
    color #000
    font-size 14px
    text-transform uppercase
    font-weight 500
    position relative
    padding 0 28px
    letter-spacing 1px
    &:before
      content ''
      display inline-block
      position absolute

    &.download--windows
      &:before
        margin-left -36px
        margin-top -5px
        sprite($s-win)

    &.download--mac
      &:before
        margin-left -30px
        margin-top -6px
        sprite($s-ios)

    &.download--linux
      &:before
        margin-left -30px
        margin-top -5px
        sprite($s-nix)

@media (max-width 1400px)
  #header .info
    &--headline
      font-size 22px
@media (max-width 1200px)
  #header
    padding 18px 34px 18px
    height 110px
    #header--logo
      width 100px
      img
        width 100px
    .info
      padding 0 40px
      &--headline
        font-size 15px
        margin-bottom 2px
      &--desc
        font-size 13px
        line-height 16px
      i
        display block
