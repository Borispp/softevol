.m-overlay
  z-index 9999
  background-color rgba(0,0,0,.7)
  width 100%
  height 100%
  position fixed
  top 0
  left 0

.popup
  display none
  position fixed
  width 600px
  borderbox()
  top 0
  margin-top 10%
  left 50%
  margin-left -300px
  background-color #dfe4e9
  z-index 10000
  text-align center
  padding 24px 50px 18px
  shadow(0px 5px 5px 0px rgba(0,0,0,0.5))

  &.m-show_popup
    display block

  h2
    color #2e3842
    font-size 16px
    text-transform uppercase
    font-weight 700

  &--close
    display inline-block
    sprite($s-close)
    position absolute
    top 12px
    right 12px
  h2
    margin-bottom 12px
  form
    width 480px
    margin 0 auto
    label
      display inline-block
      width 120px
      text-align left
      float left
      position relative
      top 12px
    input, textarea
      display inline-block
      margin 5px 0
      borderbox()
      width calc(100% - 130px)
      background-color #fff
      border 1px solid #000
      padding 6px 10px
      font-size 14px
    textarea
      height 120px
    .btn
      margin-top 12px

.get--headline
  margin-bottom 30px !important
.download_block
  height 194px
  &--other
    color #2c3842
    font-size 16px
    margin-bottom 4px
  .utopia--os
    font-size 16px
    display block
    margin-bottom 20px
    &:before
      content ''
      display block
      margin 0 auto 4px

    &.m-mac:before
      sprite($s-ios)
    &.m-windows:before
      sprite($s-win)
    &.m-linux:before
      sprite($s-nix)

.utopia--os_sub
  display inline-block
  font-size 14px
  font-weight 500
  text-transform uppercase
  color #000
  margin 0 16px 20px

  &:before
    content ''
    display inline-block
    margin-right 8px
    position relative
    top 8px

  &.m-linux:before
    sprite($s-nix)
  &.m-windows:before
    sprite($s-win)
  &.m-mac:before
    sprite($s-ios)

.select--send_width
  margin 4px 0
  .select2-container
    width calc(100% - 130px) !important

.select--send_width_xl
  margin 4px 0 10px
  .select2-container
    width 275px !important
.select2-container--open
  z-index 10000

.select--full_width
  .select2-container
    width 100% !important
.select2-container--default .select2-selection--single
  border 1px solid #000
  border-radius 0
.select2-container--default .select2-selection--single .select2-selection__rendered
  text-align left
  line-height 32px
.select2-selection
  outline none
.select2-dropdown
  border-radius 0 !important
  border 1px solid #000
.select2-container--default .select2-selection--single .select2-selection__arrow
  width 30px
  height 30px
  background-color #dee4e9
  border-left 1px solid #000

  &:before
    content ''
    position absolute
    height 1px
    width 100%
    background #fff
    margin-left -15px


.select2-container .select2-selection--single
  height 32px

.select2-container--default .select2-selection--single .select2-selection__arrow b
  border-color #000 transparent transparent transparent
  border-width 8px 6px 0 6px
  margin-left -6px
.select2-container--default.select2-container--open .select2-selection--single .select2-selection__arrow b
  border-color transparent transparent #000 transparent
  border-width 0 6px 8px 6px
  margin-top -5px
